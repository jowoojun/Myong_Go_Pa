// Modal
#mySignUpModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
        h4#myModalLabel.modal-title 회원가입
      .modal-body
        form.signupValidate(id='mysignform', name='mysignform', action='/signup', method='POST')
            .form-group.has-feedback(id='name_group')
                label.control-label(for='name') 이름
                input.form-control(type='text', id='name', name='name', placeholder='Your name', onblur='validate_name()')
                span.glyphicon.form-control-feedback(id='icon_in_name' aria-hidden='true')
            .form-group.has-feedback(id='email_group')
                label.control-label(for='email') 이메일
                input.form-control(type='email', id='email', name='email', placeholder='Email', onblur='validate_email()')
                span.glyphicon.form-control-feedback(id='icon_in_email' aria-hidden='true')
            .form-group.has-feedback(id='password_group')
                label.control-label(for='password') 비밀번호
                input.form-control(type='password', id='password', name='password', placeholder='Password', onblur='validate_password()')
                span.glyphicon.form-control-feedback(id='icon_in_password' aria-hidden='true')
            .form-group.has-feedback(id='confirmation_group')
                label.control-label(for='password_confirmation') 비밀번호 확인
                input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password', onblur='validate_confirmation()')
                span.glyphicon.form-control-feedback(id='icon_in_confirmation' aria-hidden='true')
            .modal-footer
                button.btn.btn-default.pull-left(type='button', data-dismiss='modal') 닫기
                button.btn.btn-primary.pull-left(id='submit_button', form='mysignform', type='submit') 완료  

script(src='/javascripts/validator/signup.js')
script(type='text/javascript', src='/bower_components/bootstrapvalidator/dist/js/bootstrapValidator.js')

